<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%= title %></title>
	<script src="https://cdn.bootcss.com/axios/0.19.0-beta.1/axios.min.js"></script>
</head>
<body>
	<h1>Add Customer</h1>
	<form method="POST" action="/users/add">
		<label for="">Username</label>
		<input name="username" type="text" />
		<label for="">Age</label>
		<input name="age" type="text" />
		<label for="">Email</label>
		<input name="email" type="text">
		<input type="submit" value="UPLOAD">
	</form>
		<% if(errors){ %>
	<ul>
			<% errors.forEach(err=>{ %>
				<li><%= err.msg %></li>
			<% }) %>
	</ul>
		<% } %>
	<br>
	<hr>
	<br>
	<h1>Customers</h1>
	<div>
		<% users.forEach((user)=>{ %>
			<h3><%= user.username %> <a class="deleteUser" data-id="<%= user._id %>" href="#">Delete</a></h3>
			<!-- <div><%= user.age %></div>
			<p><%= user.email %></p> -->
		<% }) %>
	</div>

	<script src="js/main.js"></script>
</body>
</html>